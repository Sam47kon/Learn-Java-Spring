<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
			http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

	<context:property-placeholder location="classpath:application.properties"/>

	<bean name="systemUser" class="ru.otr.learn.entity.User">
		<constructor-arg index="0" value="#{systemProperties['user.name']}"/>
		<constructor-arg index="1" value="${systemUser.age}"/>
	</bean>
	<bean name="companyService" class="ru.otr.learn.service.xmlbased.CompanyService">
		<constructor-arg ref="companyRepository"/>
	</bean>
	<bean name="companyRepository" class="ru.otr.learn.repository.xmlbased.CompanyRepository">
		<constructor-arg ref="database"/>
	</bean>
	<bean name="userService" class="ru.otr.learn.service.xmlbased.UserService">
		<constructor-arg ref="userRepository"/>
	</bean>
	<bean name="userRepository" class="ru.otr.learn.repository.xmlbased.UserRepository">
		<constructor-arg ref="database"/>
	</bean>
	<bean name="database" class="ru.otr.learn.db.xmlbased.Database" init-method="init" destroy-method="destroy">
		<constructor-arg index="0" type="ru.otr.learn.db.xmlbased.IdGenerator" ref="idGenerator"/>
		<constructor-arg index="1" type="ru.otr.learn.entity.User" ref="systemUser"/>
	</bean>
	<bean name="idGenerator" class="ru.otr.learn.db.xmlbased.IdGenerator"/>

	<!-- Bean Factory Post Processor -->
	<bean class="ru.otr.learn.bfpp.xmlbased.LogBeanFactoryPostProcessor"/>
	<bean class="ru.otr.learn.bfpp.xmlbased.CustomBeanFactoryPostProcessor"/>
</beans>