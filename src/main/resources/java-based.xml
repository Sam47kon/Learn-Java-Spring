<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
			http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

	<!-- annotation-config="true": включает annotation-config -->
	<context:component-scan base-package="ru.otr.learn"
							annotation-config="true"
							resource-pattern="**/*.class"
							use-default-filters="false">
		<context:include-filter type="annotation" expression="org.springframework.stereotype.Component"/>
		<context:include-filter type="regex" expression="ru\..+\.javabased\.+"/>
		<context:exclude-filter type="assignable" expression="ru.otr.learn.configuration.ApplicationConfiguration"/>
	</context:component-scan>

	<!-- Для подключения обработки org.springframework.context.support.PropertySourcesPlaceholderConfigurer-->
	<context:property-placeholder location="classpath:application.properties"/>

	<!-- Бины -->

	<!-- BeanFactoryPostProcessor -->

	<!-- BeanPostProcessor -->
</beans>